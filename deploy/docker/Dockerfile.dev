# Use the Golang base image for development
FROM golang:1.18 AS development

WORKDIR /app

# Copy the Go module files and install dependencies
COPY go.mod go.sum ./
RUN go mod tidy

# Copy the source code
COPY . .

# Install any additional tools needed for development (e.g., live-reload)
RUN go install github.com/cespare/reflex@latest

# Expose the application port
EXPOSE 8080

# Command to run the app with live reload
CMD ["reflex", "-r", "\\.go$", "go", "run", "."]
